<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".ChapterSelectorActivity">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/chaptertxt"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:src="@drawable/chapter" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/variables"
                android:layout_width="200dp"
                android:layout_height="52dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/variables" />

            <TextView
                android:id="@+id/variablesProgression"
                android:layout_width="80dp"
                android:layout_height="51dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/credentialsbox"
                android:fontFamily="@font/cyberverse"
                android:paddingTop="5dp"
                android:text="0/21"
                android:textColor="@color/colorAccent"
                android:textSize="24sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/ifs"
                android:layout_width="200dp"
                android:layout_height="52dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/ifworld" />

            <TextView
                android:id="@+id/ifsProgression"
                android:layout_width="80dp"
                android:layout_height="51dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/credentialsbox"
                android:fontFamily="@font/cyberverse"
                android:paddingTop="5dp"
                android:text="0/21"
                android:textColor="@color/colorAccent"
                android:textSize="24sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageButton
                android:id="@+id/whiles"
                android:layout_width="200dp"
                android:layout_height="52dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/whilewait" />

            <TextView
                android:id="@+id/whilesProgression"
                android:layout_width="80dp"
                android:layout_height="51dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/credentialsbox"
                android:fontFamily="@font/cyberverse"
                android:paddingTop="5dp"
                android:text="0/21"
                android:textColor="@color/colorAccent"
                android:textSize="24sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/fors"
                android:layout_width="200dp"
                android:layout_height="52dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/forever" />

            <TextView
                android:id="@+id/forsProgression"
                android:layout_width="80dp"
                android:layout_height="51dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/credentialsbox"
                android:fontFamily="@font/cyberverse"
                android:paddingTop="5dp"
                android:text="0/21"
                android:textColor="@color/colorAccent"
                android:textSize="24sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/arrays"
                android:layout_width="200dp"
                android:layout_height="52dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/arrays" />

            <TextView
                android:id="@+id/arraysProgression"
                android:layout_width="80dp"
                android:layout_height="51dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/credentialsbox"
                android:fontFamily="@font/cyberverse"
                android:paddingTop="5dp"
                android:text="0/21"
                android:textColor="@color/colorAccent"
                android:textSize="24sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/methods"
                android:layout_width="200dp"
                android:layout_height="52dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/methods" />

            <TextView
                android:id="@+id/methodsProgression"
                android:layout_width="80dp"
                android:layout_height="51dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/credentialsbox"
                android:fontFamily="@font/cyberverse"
                android:paddingTop="5dp"
                android:text="0/21"
                android:textColor="@color/colorAccent"
                android:textSize="24sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/classes"
                android:layout_width="200dp"
                android:layout_height="52dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/classes" />

            <TextView
                android:id="@+id/classesProgression"
                android:layout_width="80dp"
                android:layout_height="51dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/credentialsbox"
                android:fontFamily="@font/cyberverse"
                android:paddingTop="5dp"
                android:text="0/21"
                android:textColor="@color/colorAccent"
                android:textSize="24sp" />

        </LinearLayout>

    </LinearLayout>

    </ScrollView>

    <ImageButton
        android:id="@+id/settingsbutton"
        android:background="@drawable/settingsicon"
        android:layout_width="60dp"
        android:layout_height="56dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="0dp"/>
</RelativeLayout>