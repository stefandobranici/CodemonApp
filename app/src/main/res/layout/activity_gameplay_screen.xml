<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainGameplayScreenLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    android:weightSum="10"
    tools:context=".GameplayScreen">

    <LinearLayout
        android:id="@+id/topScreenLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:background="@drawable/window"
        android:orientation="horizontal"
        android:weightSum="2">

        <LinearLayout
            android:id="@+id/topScreenLayoutFirstHalf"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            >

            <RelativeLayout
                android:id="@+id/codemonName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:paddingLeft="20dp"
                android:paddingTop="15dp"
                >

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/codemonHealth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:paddingLeft="20dp"
                >

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/codemonSpot"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="left"
                android:paddingLeft="20dp"
                >

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/topScreenLayoutSecondHalf"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            >

            <RelativeLayout
                android:id="@+id/enemySpot"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="right"
                android:paddingRight="20dp"
                android:paddingTop="15dp"
                >

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/enemyName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:paddingRight="20dp"
                >

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/enemyHealth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:paddingRight="20dp"
                >

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

    <ScrollView

        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:background="@drawable/window">

        <LinearLayout
            android:id="@+id/middleScreenLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        </LinearLayout>

    </ScrollView>


    <ScrollView

        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:background="@drawable/window">

        <LinearLayout
            android:id="@+id/bottomScreenLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">
            <LinearLayout
                android:id="@+id/firstHalfBottomScreenLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">

            </LinearLayout>

            <LinearLayout
                android:id="@+id/secondHalfBottomScreenLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>