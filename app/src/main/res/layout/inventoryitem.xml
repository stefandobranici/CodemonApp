<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/friendParentLayout"
    android:layout_width="match_parent" android:layout_height="80dp"
    android:background="@drawable/window">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="5"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"

            android:layout_weight="0.5"
            android:id="@+id/itemImage"
            android:src="@drawable/bandana"
            android:background="@drawable/windowborder"/>

        <LinearLayout
            android:paddingTop="5dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2.25"
            android:weightSum="2"
            android:orientation="vertical"
            android:background="@drawable/windowborder">
            <TextView
                android:id="@+id/itemName"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Bandana"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/cyberverse"
                android:layout_gravity="center_horizontal"
                android:textAlignment="center"
                android:textSize="13sp"
                android:textColor="@color/colorAccent"/>

            <TextView
                android:id="@+id/rarity"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_gravity="center_horizontal"
                android:text="Legendary"
                android:fontFamily="@font/cyberverse"
                android:textAlignment="center"
                android:textSize="13sp"
                android:textColor="@color/colorAccent"/>
        </LinearLayout>

        <LinearLayout
            android:paddingTop="5dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2.25"
            android:weightSum="2"
            android:orientation="vertical"
            android:background="@drawable/windowborder">
            <TextView
                android:id="@+id/quantity"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:layout_weight="1"

                android:fontFamily="@font/cyberverse"
                android:text="Quantity: 10"
                android:textAlignment="center"
                android:textColor="@color/colorAccent"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/description"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/cyberverse"
                android:text="Description"
                android:textAlignment="center"
                android:textColor="@color/colorAccent"
                android:textSize="13sp" />
        </LinearLayout>



    </LinearLayout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent" android:layout_height="match_parent"
        android:background="@drawable/windowborder"/>

</RelativeLayout>